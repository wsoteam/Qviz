<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#337cd1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_back"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_splash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:fontFamily="@font/bubblegumsans_regular"
            android:textSize="41.7sp"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="Bright Heads"/>


        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#000000"
            android:text="Play"
            android:background="@drawable/menu_btn_shape"
            android:paddingStart="114dp"
            android:paddingEnd="114dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="41dp"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="#000000"
            android:text="Quit"
            android:background="@drawable/menu_btn_shape"
            android:paddingStart="114dp"
            android:paddingEnd="114dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="12dp"/>
        
    </LinearLayout>

</FrameLayout>