<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Screen" parent="AppTheme">
        <item name="colorPrimaryDark">#245fa3</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="colorPrimaryDark">#2e76cb</item>
    </style>




    <style name="SplashActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PB">
        <item name="colorAccent">#FFFFFF</item>
    </style>
</resources>